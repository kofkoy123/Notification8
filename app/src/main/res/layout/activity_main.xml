<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.shixia.notification8.MainActivity">


    <Button
        android:id="@+id/btn_send_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送通知" />


    <Button
        android:id="@+id/btn_send_pro_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="发送进度条通知" />

    <Button
        android:id="@+id/btn_send_custom_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送自定义通知" />

    <Button
        android:id="@+id/btn_clear_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除通知" />

</LinearLayout>
